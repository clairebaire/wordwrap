---
layout: base.njk
---
{% include 'sitenav.njk' %}

<header class="tdbc-hero">
  <div class="tdbc-container">
    <h1 class="tdbc-ink--primary tdbc-mb-none">{{ title }}</h1>
    <h2 class="tdbc-lead tdbc-content-maxlength tdbc-ink--gray tdbc-mt-sm tdbc-mx-auto">
      {{ description }}
    </h2>
  </div>
</header>
{% if tags | hasTag('notes') %}
<aside class="tdbc-container">
  {% for episode in collections.s1 | pluck( [episodeNumber] , 'episodeNumber') %}
    <p class="tdbc-mx-auto tdbc-h3 tdbc-ink--primary">🎁 Listen to <a href="{{ episode.url }}">{{ episode.data.title }}</a></p>
  {% endfor %}
</aside>
{% endif %}
<main class="tdbc-container">
  <article class="tdbc-mx-auto">
    {{ content | safe }}
  </article>
</main>
